{
  "devDependencies": {
    "chokidar": "^3.5.2",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.43.4",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:html": "Copy-Item ./src/index.html ./dist",
    "build:sass": "sass ./src/common.scss ./dist/common.css",
    "build:typescript": "webpack",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "chokidar ./src/index.html --command \"npm run build:html\"",
    "watch:sass": "sass --watch ./src/common.scss ./dist/common.css",
    "watch:typescript": "webpack --watch"
  }
}
